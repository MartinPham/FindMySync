# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

opt_out_usage

default_platform(:mac)

platform :mac do
  desc "Release"
  lane :release do
    cocoapods
    gym(
      export_method: "mac-application",
      skip_codesigning: true,
      output_directory: "build"
    )

    dmg(path: "build/FindMySync.app")
  end
end
